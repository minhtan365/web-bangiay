@using Redstore.Models;
@model Redstore.Models.Products
@{
    List<Products> product = ViewData["InFo"] as List<Products>;
    if (product == null)
    {
        product = new List<Products>();
        ViewData["InFo"] = product;
    }
    ViewBag.Title = "Index";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thông tin sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Thông tin sản phẩm</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Hình minh họa cho sản phẩm</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                        <form>
                            <div class="card-body">
                                <div style="height:300px;display: flex;justify-content: center;">
                                    <img src="@Url.Content(Model.imgSP)" alt="" style="height: 100%;" />
                                </div>
                            </div>
                            <!-- /.card-body -->

                        </form>
                    </div>
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">
                <!-- Form Element sizes -->
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin chính</h3>
                    </div>
                    @using (Html.BeginForm("Savetodata", "InfoProducts", FormMethod.Post))
                    {
                        @Html.HiddenFor(model => model.idSP) 
                        <div class="card-body">
                            <b>Tên sản phẩm</b>
                            <br />
                            @Html.TextBoxFor(model => model.nameSP, new { @class = "form-control", @placeholder = "Name Products" })
                            <br>
                            <b>Nội dung sản phẩm</b>
                            <br />
                            @Html.TextAreaFor(model => model.noiDungSP, new { @class = "form-control", @placeholder = "Content" })
                            <br>
                            <b>Giá bán</b>
                            <br />
                            @Html.TextBoxFor(model => model.priceSP, new { @class = "form-control col-3", @placeholder = "Price" })
                            <br />
                            <div class="card-footer">
                                <input type="hidden" name="idSP" value="" />
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    }

                    <!-- /.card-body -->
                </div>
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
