    <script>
        function previewImage(input) {
            var preview = document.getElementById('previewImage');
            var file = input.files[0];
            var reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
                preview.style.display = 'block'; // Show the image after selecting a file
            };

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.src = ''; // Clear the image source if no file is selected
                preview.style.display = 'none'; // Hide the image if no file is selected
            }
        }

        // Attach the event handler dynamically
        document.getElementById('exampleInputFile').addEventListener('change', function () {
            previewImage(this);
        });
