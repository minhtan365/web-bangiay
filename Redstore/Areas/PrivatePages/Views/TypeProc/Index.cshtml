@using Redstore.Models;
@model Redstore.Models.typProducts 
@{
    ViewBag.Title = "Index";
    List<typProducts> typProducts = ViewData["DSLoai"] as List<typProducts>;
}

<style>
    form{
        
    }
</style>
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thông tin sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Thông tin sản phẩm</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Hình minh họa cho sản phẩm</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form>
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã loại</th>
                                        <th>Tên loại hàng</th>
                                        <th>Số sản phẩm</th>
                                        <th>Nhóm lệnh</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(typProducts typs in typProducts)
            {
                                    <tr>
                                        <td>@typs.typeSP</td>
                                        <td>@typs.secTors</td>
                                        <td>@typs.Products.Where(a=>a.typeSP==typs.typeSP).Count() Sản phẩm </td>
                                        <td>
                                            @using (Html.BeginForm("Remove", "TypeProc", FormMethod.Post))
                                            {
                                                <input type="hidden" name="maLoai" value="@typs.typeSP" />
                                                <button class="btn btn-danger">Xóa</button>
                                            }
                                            @using (Html.BeginForm("Update", "TypeProc", FormMethod.Post))
                                            {
                                                <input type="hidden" name="maLoaic" value="@typs.typeSP" />
                                                <button class="btn btn-success">Chỉnh sửa</button>
                                            }

                                        </td>
                                    </tr>
            }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                        
                    </form>
                </div>
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">
                <!-- Form Element sizes -->
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin chính</h3>
                    </div>
                    @using (Html.BeginForm("Index", "TypeProc", FormMethod.Post))
                    {
                        <div class="card-body">
                            <b>Tên nhóm sản phẩm</b>
                            <br />
                            @Html.TextBoxFor(a => a.secTors, new { @class = "form-control", @type = "text", @placeholder = "Name Products" })
                            <br>
                            <b>Mã sản phẩm</b>
                            <br />
                            @Html.TextBoxFor(a => a.typeSP, new { @class = "form-control col-3", @type = "text", @placeholder = "IDProc" })
                            <br>
                            <b>Nội dung sản phẩm</b>
                            <br />
                            @Html.TextAreaFor(a => a.noTe, new { @class = "form-control", @type = "text", @rows = "11", @placeholder = "Content" })
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Lưu thông tin</button>
                        </div>
                    }


                    <!-- /.card-body -->
                </div>
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

